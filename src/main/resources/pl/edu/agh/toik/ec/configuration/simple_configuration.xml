<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="worker1" class="pl.edu.agh.toik.ec.workers.SimpleWorker">
        <constructor-arg type="java.lang.String" index="0" value="worker1"/>
        <constructor-arg type="java.lang.Integer" index="1" value="10"/>
    </bean>

    <bean id="worker2" class="pl.edu.agh.toik.ec.workers.SimpleWorker">
        <constructor-arg type="java.lang.String" index="0" value="worker2"/>
        <constructor-arg type="java.lang.Integer" index="1" value="5"/>
    </bean>

    <bean id="starter" class="pl.edu.agh.toik.ec.starter.SimpleStarter">
        <constructor-arg>
            <list>
                <ref bean="worker1"/>
                <ref bean="worker2"/>
            </list>
        </constructor-arg>
    </bean>

</beans>